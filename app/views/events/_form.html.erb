<%= bootstrap_form_for(@event, :html => { :multipart => true }) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    
    <%= f.text_field :name %>
  </div>
  <div class="field">
   
    <%= f.datetime_select :start_time %>
	
  </div>
  <div class="field">
    
    <%= f.text_field :location %>
  </div>
 <div class="field">
  
  <% unless @event.avatar.blank? %>
  <p><b>Current image</b><br/><%= link_to (image_tag @event.avatar.url(:thumb)), @event.avatar.url(:original), target: '_blank' %> </p><%= f.file_field :avatar, label: 'Add a new image', class: 'choose-image'%></p>
  <% else %>
 
  <%= f.file_field :avatar, label: 'Add an image for this issue - ', class: 'choose-image'%>

  <% end %>
  </div> 
  
  <div class="field">
    
    <%= f.text_area :content, class: 'edit-content', id: 'summernote' %>
  </div>
  <div class="actions pull-right">
    <%= f.submit %>
  </div>
<% end %>

<script type="text/javascript">
$('#summernote').summernote({
  toolbar: [
    // [groupName, [list of button]]
	  ['insert', ['link']],
    ['style', ['bold', 'italic', 'underline', 'clear']],
    ['para', ['style', 'ul', 'ol']],
   
  ]
});
</script>
