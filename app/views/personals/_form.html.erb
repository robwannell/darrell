<%= bootstrap_form_for(@personal) do |f| %>
 <div class="field">
   
    <%= f.text_field :name, placeholder: "First and Last"  %>
  </div>

  <div class="field">
  
    <%= f.text_field :title, placeholder: "Jobtitle or Position. Optional" %>
  </div>
  
  <div class="field">
   
    <%= f.text_area :description, maxlength: "200", id: "alloptions", label: "Short introduction, used as a leader and on home page" %>
  </div>
  
 
  
  <div class="field">
   
   
	
  	  <% unless @personal.avatar.blank? %>
  	  <p><b>Current image</b><br/><%= link_to (image_tag @personal.avatar.url(:thumb)), @personal.avatar.url(:original), target: '_blank' %> </p><%= f.file_field :avatar, label: 'Add a new image', class: 'choose-image'%></p>
  	  <% else %>
  	  <div class="field">
  	  <%= f.file_field :avatar, label: 'Add an image for this story - ', class: 'choose-image'%>
    </div>
  	  <% end %>
	  
  </div>
  
  
  <div class="field">
   
    <%= f.text_area :content %>
  </div>
  <div class="actions pull-right">
    <%= f.submit %>
  </div>
<% end %>

<script>
$(document).ready(function(){
$('textarea#alloptions').maxlength({
alwaysShow: true,
threshold: 10,
	showCharsTyped: false,
warningClass: "label label-success",
limitReachedClass: "label label-important label-danger",
separator: ' of ',
preText: 'You have ',
postText: ' characters remaining.'
});
});
</script>
