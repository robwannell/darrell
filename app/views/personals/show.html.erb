<% if current_user %>
<div class="edit alert" >
<i> <%= link_to ' Edit ', edit_personal_path(@personal), class: "admin-edit fa fa-edit", dismissible: true %> </i>|<i> <%= link_to ' Delete', @personal, method: :delete, data: { confirm: 'Are you sure?' }, class: "admin-edit fa fa-trash" %></i>

<button class="close" data-dismiss="alert" type="button">
 <span aria-hidden="true">×</span><span class="sr-only">Close</span>
</button>

</div>
<% end %>

<div class="personal-references">

<h1><%= @personal.name %></h1>
<h5><%= @personal.title %></h5>

  
<p class="lead"> <%= @personal.description %></p>


<p>
	<% unless @personal.avatar.blank? %>
  <%= image_tag @personal.avatar(:medium), align: "right" %> <% end %><%= simple_format(@personal.content) %>
</p>


<%= link_to 'Back to Personal References', darrell_personalreferences_path, class: "back-to-refs" %>

</div>
<p>	<a href="#" class="crunchify-top">↑Back to top</a>
<% content_for :rh do %>
<% if current_user %><div class="edit alert" >
 <i> <%= link_to ' Add a new Reference  ', new_personal_path, class: "admin-edit fa fa-plus", dismissible: true %> </i>
 
 <button class="close" data-dismiss="alert" type="button">
     <span aria-hidden="true">×</span><span class="sr-only">Close</span>
   </button>
   
 </div>

<% end %>


<% @personals.each do |p| %>

<% unless p == @personal %>

<h2><%= link_to p.name, p %></h2>
<p><%= p.description %> <span class="read-more  "><%= link_to '...read more', p %><i class="fa fa-share fa-read-more-blue newslink-blue"></i></span></p>
<% end %>

<% end %>
<% end%>

		   <script>            
		   	jQuery(document).ready(function() {
		   		var offset = 220;
		   		var duration = 500;
		   		jQuery(window).scroll(function() {
		   			if (jQuery(this).scrollTop() > offset) {
		   				jQuery('.crunchify-top').fadeIn(duration);
		   			} else {
		   				jQuery('.crunchify-top').fadeOut(duration);
		   			}
		   		});
 
		   		jQuery('.crunchify-top').click(function(event) {
		   			event.preventDefault();
		   			jQuery('html, body').animate({scrollTop: 0}, duration);
		   			return false;
		   		})
		   	});
		   </script>