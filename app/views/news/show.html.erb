<%= content_for :jumbotron do %>

<% if @news.avatar.blank? %>
<div class="outerwrapper-news">
	
	
<% else %>

<div  style="background: url('<%= @news.avatar.url(:original) %>') center center no-repeat;
	background-size:cover; height:450px;">

<% end%>

    <!-- Main jumbotron for a primary marketing message or call to action -->
  
   
		   <div class="jumbotron" >
      
        <div class="lead jumbylead">
			  <div class="container "><div class="jumboleader"><%= @news.title %></div></div>
        
      </div>
    </div>

</div>


<% end %>

 	<% if current_user %>
 	<div class="edit alert" >
 <i> <%= link_to ' Edit ', edit_news_path(@news), class: "admin-edit fa fa-edit", dismissible: true %> </i>|<i> <%= link_to ' Delete', @news, method: :delete, data: { confirm: 'Are you sure?' }, class: "admin-edit fa fa-trash" %></i>
 
 <button class="close" data-dismiss="alert" type="button">
     <span aria-hidden="true">×</span><span class="sr-only">Close</span>
   </button>
   
 </div>
 <% end %>

<p class="lead">

  <%= @news.description %>


<p>
 
  <%= simple_format(@news.content) %>
</p>

 <%= render '/layouts/support.html.erb' %>


	

<div class="clear"></div>

<%= content_for :rh do %>

<% if current_user %><div class="edit alert" >
 <i> <%= link_to ' Add a new story  ', new_news_path, class: "admin-edit fa fa-plus", dismissible: true %> </i>
 
 <button class="close" data-dismiss="alert" type="button">
     <span aria-hidden="true">×</span><span class="sr-only">Close</span>
   </button>
   
 </div>
 <% end %>
 
 
<% @stories.each do |i| %>
 <% unless i == @news %>
<div class="card issue-card-sml">
	
	
		<%= image_tag i.avatar.url(:thumb), class: "card-img-top issue-img-sml"%>
		<div class="card-block no-padding">
<h5 class="card-title"><%= i.title %></h5>

 <p><%= link_to 'Learn more', i %></p>
</div>
</div>
<% end %>
<% end %><% end %>
